<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp">

    <FrameLayout
        android:id="@+id/layout_photo_item"
        android:layout_width="@dimen/gallery_size"
        android:layout_height="@dimen/gallery_size">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_photo_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/default_image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_photo_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/bg_card_photo_text"
            android:maxLines="1"
            android:padding="@dimen/standard_margin_half"
            android:text="@string/text_loading_message"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>